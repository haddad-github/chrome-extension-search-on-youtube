{
  "manifest_version": 3,
  "name": "Search on Youtube",
  "version": "1.0",
  "description": "Gives the option to search highlighted text directly on Youtube, redirecting you to Youtube in another tab",
  "permissions": ["activeTab", "contextMenus"],
  "background": {
    "service_worker": "scripts/script.js"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}